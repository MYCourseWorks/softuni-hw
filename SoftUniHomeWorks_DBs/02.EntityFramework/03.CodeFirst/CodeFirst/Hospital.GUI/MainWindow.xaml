<Window x:Class="Hospital.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.GUI"
        mc:Ignorable="d"
        Title="WPF BASICS" Height="800" Width="600">

    <Border Padding="10">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Button Click="AddNewUser_Click" x:Name="AddNewUser" Grid.Column="0" Padding="4">Add New Patient</Button>
                <Button Grid.Column="1" Padding="4">Add New Medication</Button>
                <Button Grid.Column="2" Padding="4">Add New Diagnose</Button>
                <Button Grid.Column="3" Padding="4">Add New Visitation</Button>
            </Grid>

            <TextBox Margin="0 10 0 0" FontSize="30">
                List Of Patients :
            </TextBox>
            <ListBox x:Name="ListOfUsers" Margin="0 10 0 0">
            </ListBox>
        </StackPanel>
    </Border>
</Window>
